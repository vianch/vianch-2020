{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier",
    "tslint-config-airbnb"
  ],
  "jsRules": {},
  "rules": {
    "quotemark": [true, "double"],
    "semicolon": [true, "always", "ignore-bound-class-methods"],
    "interface-name": [true, "never-prefix"],
    "object-shorthand-properties-first": ["never"],
    "ter-indent": [true, 2],
    "variable-name": {
      "options": [
        "ban-keywords",
        "check-format",
        "allow-pascal-case"
      ]
    },
    "import-name": [
      true,
      null,
      { "react": "React" },
      null,
      { "ignoreExternalModule": false }
    ]
  },
  "rulesDirectory": []
}